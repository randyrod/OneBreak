<UserControl
    x:Class="OneBreak.Controls.LeftNavItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OneBreak.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel Orientation="Horizontal">
        <Path Data="{x:Bind IconData, Mode=OneWay}" Stretch="Uniform" Width="24" Stroke="White" StrokeThickness="1"/>
        <TextBlock Text="{x:Bind ItemText, Mode=OneWay}" VerticalAlignment="Center" Margin="20, 0"/>
    </StackPanel>
</UserControl>
