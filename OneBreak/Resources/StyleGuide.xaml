<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OneBreak.Resources">

    <Color x:Key="ForegroundColor">#FFFFFF</Color>

    <SolidColorBrush x:Key="PrimaryForegroundColor" Color="{ThemeResource ForegroundColor}"/>

    <Style x:Key="TextBlockForegroundPrimary" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{ThemeResource PrimaryForegroundColor}"/>
        <Setter Property="Opacity" Value="0.9"/>
    </Style>

    <Style x:Key="TextBlockForegroundSecondary" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{ThemeResource PrimaryForegroundColor}"/>
        <Setter Property="Opacity" Value="0.6"/>
    </Style>

    <Style x:Key="TextBlockForegroundDisable" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{ThemeResource PrimaryForegroundColor}"/>
        <Setter Property="Opacity" Value="0.3"/>
    </Style>
</ResourceDictionary>
