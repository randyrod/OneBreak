<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:OneBreak.Models"
    xmlns:local="using:OneBreak.Resources">

    <DataTemplate x:Key="NewsDetailPresenterTemplate">
        <ScrollViewer>
            <StackPanel>
                <Image x:Name="CoverArt" MaxWidth="1024" Grid.Row="0" Source="{Binding CoverArtImageUrl, Mode=OneWay}" Margin="20, 0" VerticalAlignment="Top"/>

                <ProgressBar IsIndeterminate="True" Foreground="Red" Margin="10" 
                             Visibility="{Binding Loading, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"
                             IsEnabled="{Binding Loading, Mode=OneWay}"/>

                <TextBlock x:Name="NewsText" Text="{Binding NewsBody, Mode=OneWay}" HorizontalAlignment="Center"
                    TextWrapping="WrapWholeWords" Margin="20" MaxWidth="1024"/>
            </StackPanel>
        </ScrollViewer>
    </DataTemplate>
    
</ResourceDictionary>
